@model IEnumerable<UniqueBLifeScience.Models.Customers>

@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>
<div class="text-end mb-2">
    <a href="@Url.Action("AddCustomer", "Home")" class="btn btn-success btn-sm">Add</a>
</div>
<table id="customerTable" class="table table-striped">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Address</th>
            <th>GST Number</th>
            <th>Phone Number</th>
            <th>DL Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerName</td>
                <td>@customer.Address</td>
                <td>@customer.GSTNumber</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.DLNumber</td>
                <td>
                    <a href="@Url.Action("EditCustomer", "Home", new { id = customer.CustomerID })" class="btn btn-primary btn-sm">Edit</a>
                    <form asp-action="DeleteCustomer" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@customer.CustomerID" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize the DataTable
            var table = $('#customerTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'excelHtml5'
                ],
                paging: true,
                searching: true,
                ordering: true,
                pageLength: 5,
                lengthMenu: [5, 10, 25, 50]
            });
        });
    </script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
}