@model UniqueBLifeScience.Models.Products

@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<form asp-action="EditProduct">
    <div class="form-group">
        <label asp-for="ProductName" class="control-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HSNCode" class="control-label"></label>
        <input asp-for="HSNCode" class="form-control" />
        <span asp-validation-for="HSNCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MRP" class="control-label"></label>
        <input asp-for="MRP" class="form-control" />
        <span asp-validation-for="MRP" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rate" class="control-label"></label>
        <input asp-for="Rate" class="form-control" />
        <span asp-validation-for="Rate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GST" class="control-label"></label>
        <input asp-for="GST" class="form-control" />
        <span asp-validation-for="GST" class="text-danger"></span>
    </div><div class="form-group">
        <label asp-for="Batch" class="control-label"></label>
        <input asp-for="Batch" class="form-control" />
        <span asp-validation-for="Batch" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Packing" class="control-label"></label>
        <input asp-for="Packing" class="form-control" />
        <span asp-validation-for="Packing" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="ProductID" />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a href="@Url.Action("Products", "Home")" class="btn btn-secondary">Back to Products</a>
    </div>
</form>
