@model IEnumerable<UniqueBLifeScience.Models.Products>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>
<div class="text-end mb-2">
    <a href="@Url.Action("AddProduct", "Home")" class="btn btn-success btn-sm">Add</a>
</div>
<table id="productTable" class="table table-striped">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>HSN Code</th>
            <th>MRP</th>
            <th>Rate</th>
            <th>GST</th>
            <th>Batch</th>
            <th>Packing</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.HSNCode</td>
                <td>@product.MRP</td>
                <td>@product.Rate</td>
                <td>@product.GST</td>
                <td>@product.Batch</td>
                <td>@product.Packing</td>
                <td>
                    <a href="@Url.Action("EditProduct", "Home", new { id = product.ProductID })" class="btn btn-primary btn-sm">Edit</a>
                    <form asp-action="DeleteProduct" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@product.ProductID" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize the DataTable
            var table = $('#productTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'excelHtml5'
                ],
                paging: true,
                searching: true,
                ordering: true,
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50]
            });
        });
    </script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
}