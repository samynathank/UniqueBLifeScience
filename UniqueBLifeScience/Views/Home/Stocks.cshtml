@model IEnumerable<UniqueBLifeScience.Models.Stocks>

@{
    ViewData["Title"] = "Stocks";
}

<h1>Stocks</h1>
<div class="text-end mb-2">
    <a href="@Url.Action("CreateStock", "Home")" class="btn btn-success btn-sm">Add</a>
</div>
<div class="table-responsive">
<table id="stocksTable" class="table">
    <thead>
        <tr>
            <th>Company Name</th>
                <th>GST Number</th>
                <th>Packing GST</th>
                <th>Total</th>
            <th>Purchase Bill</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CompanyName</td>
                    <td>@item.GSTNumber</td>
                    <td>@Math.Round((decimal)item.PackingGST, 2)</td>
                    <td>@item.Total</td>
                <td>
                    <a href="@Url.Content("~/uploads/" + item.PurchaseBill)" download>@item.PurchaseBill</a>
                </td>
                <td>
                    <a href="@Url.Action("EditStock", "Home", new { id = item.StockID })" class="btn btn-primary btn-sm">Edit</a>
                    <a href="@Url.Action("DeleteStock", "Home", new { id = item.StockID })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this stock?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#stocksTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'excelHtml5'
                ]
            });
        });

        $('#stocksTable').DataTable({
            paging: true,       // Enable pagination
            searching: true,    // Enable search bar
            ordering: true,     // Enable sorting
            pageLength: 5,      // Set number of rows per page
            lengthMenu: [5, 10, 25, 50] // Define page length options
        });
    </script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
}


